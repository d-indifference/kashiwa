enum UserRole {
  ADMINISTRATOR
  MODERATOR
}

model User {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  username     String   @unique @db.VarChar(256)
  passwordHash String   @map("password_hash") @db.Text
  email        String   @db.VarChar(256)
  role         UserRole

  bans Ban[]

  @@map("user")
}
