include ../../_inc/thread/_head
include ../../_inc/admin/_admin-bar
include ../../_inc/admin/_admin-links

html(lang='en')
    +Head('Bans - Kashiwa Image Board')
    body
        +AdminBar(session.payload.role)
        div.logo Bans - Kashiwa Image Board
        hr
        + AdminLinks(session.payload.role)
        div.theader
            | Banned IPs list

        div(align='center')
            ='['
            a(href='/kashiwa/ban/new') Add new ban
            =']'

        table(align='center' style='white-space: nowrap')
            thead
                tr.row1
                    th Created at
                    th IP
                    th Till
                    th Reason
                    th Who banned?
                    th
            tbody
              each ban, index in content.content
                  if (index + 1) % 2 === 0
                      tr.row1
                          td #{simpleFormatDateTime(ban.createdAt)}
                          td #{ban.ip}
                          td #{simpleFormatDateTime(ban.till)}
                          td #{ban.reason}
                          td
                            if ban.user
                                | #{ban.user.username}
                            else
                                | -
                          td
                            form(method='post' action=`/kashiwa/ban/delete/${ban.id}`)
                                input(type='submit' value='Delete this ban')
                  else
                      tr.row2
                          td #{simpleFormatDateTime(ban.createdAt)}
                          td #{ban.ip}
                          td #{simpleFormatDateTime(ban.till)}
                          td #{ban.reason}
                          td
                            if ban.user
                                | #{ban.user.username}
                            else
                                | -
                          td
                              form(method='post' action=`/kashiwa/ban/delete/${ban.id}`)
                                  input(type='submit' value='Delete this ban')

        div(align='center')
            ='['
            a(href='/kashiwa/ban/new') Add new ban
            =']'

            if content.previous !== null
                a(href=`/kashiwa/ban?page=${content.previous}` title='Previous') ←
            if content.next !== null
                a(href=`/kashiwa/ban?page=${content.next}` title='Next') →
