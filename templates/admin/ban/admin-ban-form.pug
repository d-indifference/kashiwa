include ../../_inc/thread/_head
include ../../_inc/admin/_admin-bar
include ../../_inc/admin/_admin-links

html(lang='en')
    +Head('New ban')
    body
        +AdminBar(session.payload.role)
        div.logo New ban - #{SITE_SETTINGS().siteName}
        hr
        + AdminLinks(session.payload.role)
        div.theader
            | Create new ban

        div(align='center')
            ='['
            a(href='/kashiwa/ban') Go back
            =']'
            form(method='post' action='/kashiwa/ban/new')
                div.postarea
                    table
                        tbody
                            tr
                                td.postblock IP
                                td
                                    input(type='text' name='ip' value=content.ip)
                            tr
                                td.postblock Duration
                                td
                                    input(type='number' name='timeValue' value=3 min=1 max=128)
                                    select(name='timeUnit')
                                        option(value='hours') Hours
                                        option(value='days' selected=true) Days
                                        option(value='months') Months
                                        option(value='years') Years
                            tr
                                td.postblock Reason
                                td
                                    textarea(name='reason' rows=6 cols=60)
                                        | Violation of board rules

                input(type='submit' value='Create new Ban')
