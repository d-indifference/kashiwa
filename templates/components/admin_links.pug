mixin AdminLink(url, display_name)
    | [
    a(href=url)= display_name
    | ]


mixin AdminLinks(role)
    div(align='center')
        +AdminLink('/kashiwa', LOCALE.DASHBOARD)
        if role === 'ADMINISTRATOR'
            +AdminLink('/kashiwa/global-settings', LOCALE.SITE_SETTINGS)
            +AdminLink('/kashiwa/staff', LOCALE.STAFF_PANEL)
            +AdminLink('/kashiwa/board', LOCALE.BOARDS)
        +AdminLink('/kashiwa/moderation', LOCALE.MODERATION)
        +AdminLink('/kashiwa/ban', LOCALE.BANNED_POSTERS)
        if role === 'ADMINISTRATOR'
            +AdminLink('/kashiwa/spam', LOCALE.SPAM_LIST)
            +AdminLink('/kashiwa/ip-filter', LOCALE.IP_FILTER)
            +AdminLink('/kashiwa/dump', LOCALE.SITE_DUMP)
